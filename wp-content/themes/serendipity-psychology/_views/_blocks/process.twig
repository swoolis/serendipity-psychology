{% set process = options.process %}
<div id="process" class="{{ spacingY }} bg-primary">
    <div class="container">
        <div class="flex flex-wrap relative">
            {% if process.pre_title %}<span class="mb-6 font-subheading pre-title text-secondary">{{ process.pre_title }}</span>{% endif %}
            <div class="flex flex-wrap text-white -my-3 -mx-6 md:-mx-8 lg:-mx-16 2xl:-mx-32">
                {% for step in process.process %}
                    <div class="py-3 pl-6 pr-16 xs:pr-24 md:px-8 lg:px-16 2xl:px-32 w-full md:w-1/3 relative">
                        <span class="mb-2 block font-heading text-2xl md:text-3xl lg:text-4xl leading-tight">{{ loop.index }}. {{ step.title }}</span>
                        <div class="text-sm text-grey">{{ step.copy }}</div>
                        {% if loop.last %}
                            <img src="" data-src="{{ theme.link ~ '/_resources/images/step-1.png' }}" class="top-0 absolute right-0 transform md:hidden lazyload w-32 h-auto">
                        {% else %}
                            <img src="" data-src="{{ theme.link ~ '/_resources/images/step-' ~ loop.index ~ '.png' }}" class="top-0 absolute right-0 transform md:translate-x-1/4 2xl:translate-x-1/3 lazyload w-32 md:w-1/3 lg:w-2/5 h-auto {{ loop.index == 1 ? 'md:top-1 xl:-top-2' }} {{ loop.index == 2 ? 'md:-top-2 xl:-top-7' }}">
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>