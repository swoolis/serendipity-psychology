<div id="{{ id }}" class="bg-{{ bgColour ? bgColour : 'white' }} {{ spacingY }}">
    <div class="container">
        <div class="flex flex-wrap">
            <div class="flex flex-col items-start w-full lg:pr-12 lg:w-2/5">
                <span class="text-primary font-heading text-4xl md:text-5xl lg:text-6xl leading-tight mb-3 block">{{ fields.title }}</span>
                <div class="copy">{{ fields.copy }}</div>
                {% if fields.buttons and post.id != dontShowButton %}
                    {% for button in fields.buttons %}
                        {% include "_atoms/button.twig" with {
                            link: button.button.url,
                            text: button.button.title,
                            colour: button.colour,
                            classes: 'mt-2 mb-8',
                        } %}
                    {% endfor %}
                {% endif %} 

                {% if fields.show_low_fees_cta %}
                    {% include "_atoms/low-fees-cta.twig" with { 
                        backgroundColour: ( bgColour in ['white', false]  ? false : 'white' ) 
                    } %}
                {% endif %}
            </div>

            <div class="w-full lg:w-3/5 lg:pl-6 mt-8 lg:mt-0">
                <div class="-m-4 relative">
                    <div class="lg:hidden">
                        <div class="flex flex-wrap js-bucketsMob-slider">
                            {% for post in buckets %}
                                <div class="w-full p-4">
                                    {% include "_atoms/bucket.twig" %}
                                </div>
                            {% endfor %}
                        </div>
                        {% include "_atoms/slider-controls.twig" with {
                            sliderName: 'bucketsMob' 
                        } %}
                    </div>
                    
                    <div class="hidden lg:block">
                        <div class="js-bucketsDesktop-slider">
                            {% set i = 1 %}
                            {% for post in buckets %}
                                {% if i == 1 %}
                                    <div class=""><div class="flex flex-wrap">
                                {% endif %}
                                        <div class="w-full lg:w-1/3 p-4">
                                            {% include "_atoms/bucket.twig" %}
                                        </div>
                                {% if i == 6 or loop.last %}
                                    {% set i = 1 %}
                                    </div></div>
                                {% else %}
                                    {% set i = i + 1 %}
                                {% endif %}
                            {% endfor %}
                        </div>
                        {% include "_atoms/slider-controls.twig" with {
                            sliderName: 'bucketsDesktop' 
                        } %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>