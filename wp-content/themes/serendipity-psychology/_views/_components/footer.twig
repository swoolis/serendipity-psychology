<footer class="bg-white overflow-hidden">

	<div class="container relative flex-wrap flex {{ spacingY }}">

		<div class="w-full mb-8 xs:w-1/2 md:w-1/3 xl:w-1/5 xs:pr-8">
			<span class="text-primary text-lg font-heading mb-4 block">Specialist Therapies</span>
			<ul>
				{% for item in specialistTherapies %}
					<li class="my-3 text-sm leading-tight">
						<a href="{{item.link}}">{{item.title}}</a>
					</li>
				{% endfor %}
			</ul>
		</div>

		<div class="w-full mb-8 xs:w-1/2 md:w-1/3 xl:w-1/5 xs:pr-8">
			<span class="text-primary text-lg font-heading mb-4 block">Care Pathways</span>
			<ul>
				{% for item in carePathways %}
					<li class="my-3 text-sm leading-tight">
						<a href="{{item.link}}">{{item.title}}</a>
					</li>
				{% endfor %}
			</ul>
		</div>

		<div class="w-full mb-8 xs:w-1/2 md:w-1/3 xl:w-1/5 xs:pr-8">
			<span class="text-primary text-lg font-heading mb-4 block">Conditions</span>
			<ul>
				{% for item in conditions %}
					<li class="my-3 text-sm leading-tight">
						<a href="{{item.link}}">{{item.title}}</a>
					</li>
				{% endfor %}
			</ul>

			<span class="text-primary text-lg font-heading mb-4 block mt-8">Insurance Providers</span>
			<div class="-mx-2 w-full flex flex-wrap items-center">
				{% include "_atoms/logos.twig" %}
			</div>
		</div>

		<div class="w-full mb-8 xs:w-1/2 md:w-1/3 xl:w-1/5 xs:pr-8">
			<span class="text-primary text-lg font-heading mb-4 block">Explore</span>
			<ul>
				{% for item in secondaryMenu.items %}
					<li class="my-3 text-sm leading-tight">
						<a href="{{item.url}}">{{item.name}}</a>
					</li>
				{% endfor %}
			</ul>
		</div>

		<div class="w-full mb-8 xs:w-1/2 md:w-1/3 xl:w-1/5 xs:pr-8">
			<span class="text-primary text-lg font-heading mb-4 block">Contact Us</span>
			<ul>
				<li class="my-3 text-sm leading-tight"><a href="tel:{{options.default_phone_number}}">{{options.default_phone_number}}</a></li>
				<li class="my-3 text-sm leading-tight"><a href="mailto:{{options.site_email}}">{{options.site_email}}</a></li>

				{% include "_atoms/social-links.twig" with { linkClasses: 'text-primary text-3xl hover:text-secondary-extraDark' } %}

				<a href="https://www.google.com/search?q=serendipity+psychology&source=lmns&bih=668&biw=1440&hl=en-GB&sa=X&ved=2ahUKEwiOufeDmNaEAxU1QaQEHdrVCrgQ0pQJKAB6BAgBEAI#" target="_blank" class="flex items-center mt-6 text-sm transition-all transform hover:scale-103">
					<span class="font-bold mr-1">Review us</span> on
					<img src="" data-src="{{ theme.link }}/_resources/images/google-logo.png" class="lazyload w-16 ml-2">
				</a>
			</ul>
		</div>

		<div class="w-full">
			<span class="text-primary text-xs">&copy; {{site.title}} {{ 'now' | date('Y') }}. All Rights Reserved.</span>
		</div>

		<img src="" data-src="{{ site.link }}/wp-content/uploads/2024/02/favicon.png" class="lazyload w-32 h-auto sm:w-72 sm:absolute sm:right-0 sm:bottom-0 opacity-50 mt-8 sm:mt-0 -mb-8 sm:-mr-8">

	</div>

</footer>