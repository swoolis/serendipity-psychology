<div class="bg-grey {{ spacingT }}">
	<div class="max-w-screen-4xl mx-auto lg:px-6 xl:px-10">
		<div class="flex flex-wrap">
			<div class="w-full lg:w-[55%] px-4 2xs:px-6 md:px-8 lg:pr-8 lg:pl-0 {{ spacingB }}">
				<span class="text-primary font-heading text-4xl md:text-5xl lg:text-6xl leading-tight mb-5 block">Get Started</span>
				{% filter shortcodes %}
					[contact-form-7 id="489ceee" title="Contact Form"]
				{% endfilter %}
			</div>
			{% set consultation = options.consultation %}
			<div class="relative w-full lg:w-[45%] bg-primary overflow-hidden rounded-tr-4xl lg:rounded-tr-none lg:rounded-tl-5xl lg:-mr-6 xl:-mr-10 lg:ml-6 xl:ml-10">
				{% include "_atoms/picture.twig" with {
                    source: consultation.image.url,
                    pictureClasses: 'w-full h-full absolute top-0 left-0 z-0 opacity-25',
                    lazyload: false,
                    breakpoints: {
                        "1024px" : {
                            w: 1280,
                            h: null,
                            crop: 'center'
                        },
                        "768px" : {
                            w: 1024,
                            h: 400,
                            crop: 'center'
                        },
                        "1px" : {
                            w: 640,
                            h: 350,
                            crop: 'center'
                        },
                    },
                    img: {
                        classes: 'w-full h-full object-cover object-center',
                        w: 640,
                        h: 350,
                        crop: 'center',
                    }
                } %}
				<div class="w-full h-full flex flex-col items-start justify-end relative z-10 {{ spacingY }} px-4 2xs:px-6 md:px-8 lg:px-16 2xl:px-20">
					{% if consultation.pre_title %}
						<span class="mb-2 font-subheading pre-title text-secondary">{{ consultation.pre_title }}</span>
					{% endif %}
					{% if consultation.title %}
						<span class="font-heading text-3xl sm:text-4xl xl:text-5xl 4xl:text-6xl leading-tight text-white">{{ consultation.title }}</span>
					{% endif %}
					{% if consultation.copy %}
						<div class="mt-6 copy text-white">{{ consultation.copy }}</div>
					{% endif %}
					{% if consultation.buttons %}
						<div class="flex flex-wrap items-center md:mt-2">
							{% for button in consultation.buttons %}
								{% include "_atoms/button.twig" with {
                                    link: button.button.url,
                                    text: button.button.title,
                                    colour: button.colour,
                                    classes: 'mt-2 mr-2',
                                } %}
							{% endfor %}
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
</div>
