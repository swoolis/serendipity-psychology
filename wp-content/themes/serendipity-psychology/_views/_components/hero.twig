{% set hero = post.meta('hero') %}

<div class="w-full hero bg-grey">
	<div class="container flex flex-wrap">
		<div class="w-full lg:w-1/2 lg:pr-6">
			<div class="py-8 md:py-12 lg:py-16 flex flex-col">
				{% if hero.pre_title %}<span class="mb-2 font-subheading text-2xl md:text-3xl lg:text-4xl text-primary">{{ hero.pre_title }}</span>{% endif %}
				{% if hero.title %}<span class="font-heading text-5xl sm:text-6xl lg:text-7xl xl:text-8xl leading-tight">{{ hero.title }}</span>{% endif %}
			</div>
		</div>
		<div class="w-full lg:w-1/2 lg:pl-6">
			{% include "_components/picture.twig" with {
				source: post.thumbnail.src,
				lazyload: false,
				breakpoints: {
				"1530px" : {
					w: 1800,
					h: 500,
					crop: 'center'
				},
				"1280px" : {
					w: 1530,
					h: 500,
					crop: 'center'
				},
				"1024px" : {
					w: 1280,
					h: 500,
					crop: 'center'
				},
				"768px" : {
					w: 1024,
					h: 500,
					crop: 'center'
				},
				"640px" : {
					w: 768,
					h: 400,
					crop: 'center'
				},
				"1px" : {
					w: 640,
					h: 640,
					crop: 'center'
				},
				},
				img: {
				classes: '',
				w: 640,
				h: 640,
				crop: 'center',
				}
			} %}
		</div>
	</div>
</div>
